@model IEnumerable<PetWorld.Entity.Product>
@{ 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container pb-5 pt-5">
    <div class="row">
        <div class="col col-md-6">
            <h2>Ürün Listesi</h2>
            <hr />
        </div>
        <div class="col-md-6">
            <p>
                @Html.ActionLink("Ürün Ekle", "Create", null, new { @class = "btn btn-success" })
            </p>
            <hr />
        </div>
    </div>
    <table class="table table-bordered ">
        <tr class="table-bordered text-center">
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th style="width:15%"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="table-bordered">
                <td>
                    <img src="/Upload/@item.Image" class="w-75" alt="image text" />

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @if (item.IsHome)
                    {
                        <label class="badge badge-success">
                            <i class="far fa-check-circle"></i>
                            Evet
                        </label>
                    }
                    else
                    {
                        <label class="badge badge-danger">
                            <i class="far fa-times-circle"></i>
                            Hayır
                        </label>
                    }

                </td>
                <td>
                    @if (item.IsApproved)
                    {
                        <label class="badge badge-success">
                            <i class="far fa-check-circle"></i>
                            Onaylı
                        </label>
                    }
                    else
                    {
                        <label class="badge badge-danger">
                            <i class="far fa-times-circle"></i>
                            Onaysız
                        </label>
                    }

                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>
